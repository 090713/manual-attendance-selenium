              "<meta charset=\"UTF-8\">\n",
              "<title>Faculty Dashboard</title>\n",
              "<style>\n",
              "    body {\n",
              "        font-family: Arial, sans-serif;\n",
              "        text-align: center;\n",
              "        color: white;\n",
              "        background: linear-gradient(270deg, #ff512f, #dd2476);\n",
              "        background-size: 400% 400%;\n",
              "        animation: gradientBG 8s ease infinite;\n",
              "        padding: 20px;\n",
              "    }\n",
              "    @keyframes gradientBG {\n",
              "        0% { background-position: 0% 50%; }\n",
              "        50% { background-position: 100% 50%; }\n",
              "        100% { background-position: 0% 50%; }\n",
              "    }\n",
              "    h2 {\n",
              "        margin-bottom: 20px;\n",
              "    }\n",
              "    button {\n",
              "        margin: 10px;\n",
              "        padding: 12px 20px;\n",
              "        font-size: 16px;\n",
              "        border: none;\n",
              "        cursor: pointer;\n",
              "        border-radius: 6px;\n",
              "        transition: transform 0.2s;\n",
              "    }\n",
              "    button:hover {\n",
              "        transform: scale(1.05);\n",
              "    }\n",
              "    #attendanceForm {\n",
              "        margin-top: 20px;\n",
              "        background: rgba(0,0,0,0.3);\n",
              "        padding: 20px;\n",
              "        border-radius: 10px;\n",
              "        display: none;\n",
              "    }\n",
              "    select {\n",
              "        padding: 5px;\n",
              "        border-radius: 5px;\n",
              "        margin-left: 10px;\n",
              "    }\n",
              "    table {\n",
              "        margin: auto;\n",
              "        margin-top: 20px;\n",
              "        border-collapse: collapse;\n",
              "        background: rgba(0,0,0,0.2);\n",
              "    }\n",
              "    td, th {\n",
              "        border: 1px solid white;\n",
              "        padding: 8px 15px;\n",
              "    }\n",
              "</style>\n",
              "</head>\n",
              "<body>\n",
              "\n",
              "<h2>Faculty Dashboard</h2>\n",
              "<button onclick=\"showPostForm()\">Post Attendance</button>\n",
              "<button onclick=\"viewAttendance()\">View Attendance</button>\n",
              "\n",
              "<div id=\"attendanceForm\">\n",
              "    <h3>Post Attendance</h3>\n",
              "    <form id=\"postForm\">\n",
              "        <table>\n",
              "            <tr><th>Student Name</th><th>Status</th></tr>\n",
              "        </table>\n",
              "        <button type=\"submit\">Submit Attendance</button>\n",
              "    </form>\n",
              "</div>\n",
              "\n",
              "<div id=\"viewSection\" style=\"display:none;\">\n",
              "    <h3>Attendance Records</h3>\n",
              "    <table id=\"attendanceTable\">\n",
              "        <tr><th>Student</th><th>Status</th></tr>\n",
              "    </table>\n",
              "</div>\n",
              "\n",
              "<script>\n",
              "    const students = [\n",
              "        \"Student 1\",\"Student 2\",\"Student 3\",\"Student 4\",\"Student 5\",\n",
              "        \"Student 6\",\"Student 7\",\"Student 8\",\"Student 9\",\"Student 10\"\n",
              "    ];\n",
              "    let attendanceData = [];\n",
              "\n",
              "    function showPostForm() {\n",
              "        document.getElementById(\"attendanceForm\").style.display = \"block\";\n",
              "        document.getElementById(\"viewSection\").style.display = \"none\";\n",
              "        let table = document.querySelector(\"#postForm table\");\n",
              "        table.innerHTML = \"<tr><th>Student Name</th><th>Status</th></tr>\";\n",
              "        students.forEach(stu => {\n",
              "            let row = `<tr>\n",
              "                <td>${stu}</td>\n",
              "                <td>\n",
              "                    <select name=\"${stu}\">\n",
              "                        <option value=\"Present\">Present</option>\n",
              "                        <option value=\"Absent\">Absent</option>\n",
              "                    </select>\n",
              "                </td>\n",
              "            </tr>`;\n",
              "            table.innerHTML += row;\n",
              "        });\n",
              "    }\n",
              "\n",
              "    document.getElementById(\"postForm\").addEventListener(\"submit\", function(e) {\n",
              "        e.preventDefault();\n",
              "        attendanceData = [];\n",
              "        students.forEach(stu => {\n",
              "            let status = document.querySelector(\\`select[name=\"\\${stu}\"]\\`).value;\n",
              "            attendanceData.push({ name: stu, status: status });\n",
              "        });\n",
              "        alert(\"Attendance Posted Successfully!\");\n",
              "        document.getElementById(\"attendanceForm\").style.display = \"none\";\n",
              "    });\n",
              "\n",
              "    function viewAttendance() {\n",
              "        document.getElementById(\"viewSection\").style.display = \"block\";\n",
              "        document.getElementById(\"attendanceForm\").style.display = \"none\";\n",
              "        let table = document.getElementById(\"attendanceTable\");\n",
              "        table.innerHTML = \"<tr><th>Student</th><th>Status</th></tr>\";\n",
              "        attendanceData.forEach(record => {\n",
              "            let row = `<tr>\n",
              "                <td>\\${record.name}</td>\n",
              "                <td style=\"color:\\${record.status === 'Present' ? 'lightgreen' : 'red'};\">\n",
              "                    \\${record.status}\n",
              "                </td>\n",
              "            </tr>`;\n",
              "            table.innerHTML += row;\n",
              "        });\n",
              "    }\n",
              "</script>\n",
              "\n",
              "</body>\n",
              "</html>\n"
            ]
