              "function toggleForm() {\n",
              "    isRegister = !isRegister;\n",
              "    document.getElementById(\"form-title\").innerText = isRegister ? \"Register\" : \"Login\";\n",
              "    document.querySelector(\"button\").innerText = isRegister ? \"Register\" : \"Login\";\n",
